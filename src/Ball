class Ball { 
  float x;
  float y;
  float speedX;
  float speedY;
  float diameter;
  color c;

  Ball(float x, float y) {
    this.x = x;
    this.y = y;
    speedX = 0;
    speedY = 0;
    c = (225);
  }

  void move() {
    y = y + speedY;
    x = x + speedX;
  }

  void display() {
    fill(c);
    ellipse(x, y, 50, 50);
  }
}
